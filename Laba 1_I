#include <iostream>
#include <string>
#include "Tovar.h"

using namespace std;

	
	void Tovar::set_Naimenovanie(char *naimenovanie)
	{
		int n = strlen(naimenovanie);
		Naimenovanie = new char[n+1];
		strcpy(Naimenovanie,naimenovanie);
	}

	void set_Color(char *color)
	{
		int n = strlen(color);
		Color = new char[n+1];
		strcpy(Color,color);
	}

	void set()
	{
		char name[40];
		char cvet[20];

		

		cout << "Введите наименование товара: " ;
		cin >> name;
		set_Naimenovanie(name);
		cout << "Введите цвет товара: " ;
		cin >> cvet;
		set_Color(cvet);
		cout << "Введите стоимость товара: " ;
		cin >> Cost;
}

	void show()
	{
		cout << "----------------------" << endl;
		cout << "Наименование товара: " << Naimenovanie << endl;
		cout << "Цвет товара: " << Color << endl;
		cout << "Стоимость товара: " << Cost << endl;
	}

	Tovar();
	Tovar(int ,char*,char*);
	Tovar(Tovar&Naimenovanie);
	~Tovar();

};

Tovar::Tovar(){
	cout << "\t\t\t Работает конструктор без параметров: " << endl;
	set();
};

Tovar::Tovar(int Cost_1,char* Naimenovanie_1,char* Color_1){
	
	Cost=Cost_1;
	set_Naimenovanie(Naimenovanie_1);
	set_Color(Color_1);
	};

Tovar::Tovar(Tovar&Naimen){
	
	Cost=Naimen.Cost;
	set_Naimenovanie(Naimen.Naimenovanie);
	set_Color(Naimen.Color);
};

Tovar::~Tovar(){
	
	delete[] Naimenovanie;
	delete[] Color;
	//cout << "Работает деструктор" << endl;
	//system("pause");
};

void main()
{
	setlocale(0,"rus");

	Tovar A;
	Tovar B(1500,"Ball","Yellow");
	Tovar C(B);
	
	cout << endl;
	
	A.show();
	
	cout << endl;

		cout << "\t\t\t Работает конструктор c параметрами " << endl;
	B.show();

	cout << endl;

		cout << "\t\t\t Работает конструктор копии: " << endl;
		C.set_Color("Blue");
	C.show();

	cout << endl;
	
	system("pause");

}
